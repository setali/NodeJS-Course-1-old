<%- include("../../layouts/admin-top.ejs") %>

<div class="article">
  <div class="row">
    <div class="label">ID</div>
    <div class="content"><%= article.id %></div>
  </div>
  <div class="row">
    <div class="label">Title</div>
    <div class="content"><%= article.title %></div>
  </div>
  <div class="row">
    <div class="label">Text</div>
    <p class="content"><%= article.text %></p>
  </div>
  <div class="row">
    <div class="label">Author</div>
    <p class="content"><%= article.user?.username %></p>
  </div>

  <hr />

  <%- include('../../includes/article-delete-form.ejs', {article}) %>

  <a class="action" href="/admin/article/<%= article.id %>/edit"
    >Edit this article</a
  >
  <a class="action" href="/admin/article">Back to list</a>
</div>

<%- include("../../layouts/admin-bottom.ejs") %>
